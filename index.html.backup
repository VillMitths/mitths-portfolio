        /* Mood Ball Component */
        .mood-section {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 80px 40px;
            margin-bottom: 40px;
            perspective: 1200px;
            position: relative;
        }

        .mood-prompt {
            font-family: 'Cormorant Garamond', serif;
            font-size: 28px;
            color: #d4b896;
            letter-spacing: 3px;
            margin-bottom: 50px;
            text-align: center;
            font-style: italic;
            opacity: 0;
            animation: fadeInPrompt 1.2s ease-out 0.5s forwards;
        }

        @keyframes fadeInPrompt {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .mood-ball-container {
            position: relative;
            width: 280px;
            height: 280px;
            transform-style: preserve-3d;
            cursor: pointer;
            user-select: none;
            -webkit-tap-highlight-color: transparent;
        }

        .mood-ball {
            position: absolute;
            width: 100%;
            height: 100%;
            border-radius: 50%;
            background: radial-gradient(circle at 30% 30%,
                rgba(212, 184, 150, 0.4) 0%,
                rgba(212, 184, 150, 0.2) 20%,
                rgba(180, 140, 100, 0.15) 40%,
                rgba(120, 80, 50, 0.1) 60%,
                rgba(8, 8, 8, 0) 100%
            );
            box-shadow:
                inset -20px -20px 60px rgba(0, 0, 0, 0.5),
                inset 10px 10px 40px rgba(212, 184, 150, 0.2),
                0 0 60px rgba(212, 184, 150, 0.3),
                0 0 100px rgba(212, 184, 150, 0.2),
                0 0 140px rgba(212, 184, 150, 0.1);
            animation: breatheGlow 4s ease-in-out infinite, entranceRotate 2s ease-out;
            transition: transform 0.15s ease-out, box-shadow 0.3s ease;
            transform-style: preserve-3d;
            --glow-intensity: 1;
        }

        @keyframes breatheGlow {
            0%, 100% {
                box-shadow:
                    inset -20px -20px 60px rgba(0, 0, 0, 0.5),
                    inset 10px 10px 40px rgba(212, 184, 150, 0.2),
                    0 0 60px rgba(212, 184, 150, calc(0.3 * var(--glow-intensity))),
                    0 0 100px rgba(212, 184, 150, calc(0.2 * var(--glow-intensity))),
                    0 0 140px rgba(212, 184, 150, calc(0.1 * var(--glow-intensity)));
            }
            50% {
                box-shadow:
                    inset -20px -20px 60px rgba(0, 0, 0, 0.5),
                    inset 10px 10px 40px rgba(212, 184, 150, 0.3),
                    0 0 80px rgba(212, 184, 150, calc(0.4 * var(--glow-intensity))),
                    0 0 120px rgba(212, 184, 150, calc(0.3 * var(--glow-intensity))),
                    0 0 160px rgba(212, 184, 150, calc(0.15 * var(--glow-intensity)));
            }
        }

        @keyframes entranceRotate {
            0% {
                transform: rotateY(-180deg) scale(0.5);
                opacity: 0;
            }
            60% {
                opacity: 1;
            }
            100% {
                transform: rotateY(0deg) scale(1);
                opacity: 1;
            }
        }

        .mood-ball::before {
            content: '';
            position: absolute;
            top: 15%;
            left: 20%;
            width: 40%;
            height: 40%;
            background: radial-gradient(circle,
                rgba(255, 255, 255, 0.3) 0%,
                rgba(212, 184, 150, 0.2) 30%,
                transparent 70%
            );
            border-radius: 50%;
            filter: blur(20px);
            animation: shineShift 6s ease-in-out infinite;
        }

        @keyframes shineShift {
            0%, 100% {
                transform: translate(0, 0) scale(1);
                opacity: 0.6;
            }
            50% {
                transform: translate(10px, 10px) scale(1.1);
                opacity: 0.8;
            }
        }

        .mood-ball::after {
            content: '';
            position: absolute;
            inset: -2px;
            border-radius: 50%;
            background: conic-gradient(
                from 0deg,
                transparent 0deg,
                rgba(212, 184, 150, 0.1) 90deg,
                transparent 180deg,
                rgba(212, 184, 150, 0.1) 270deg,
                transparent 360deg
            );
            filter: blur(8px);
            animation: rotateRing 20s linear infinite;
            opacity: 0.4;
        }

        @keyframes rotateRing {
            to {
                transform: rotate(360deg);
            }
        }

        .mood-ball-core {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 60%;
            height: 60%;
            border-radius: 50%;
            background: radial-gradient(circle at 35% 35%,
                rgba(212, 184, 150, 0.15) 0%,
                rgba(180, 140, 100, 0.08) 40%,
                transparent 70%
            );
            filter: blur(10px);
            animation: pulseCore 3s ease-in-out infinite;
        }

        @keyframes pulseCore {
            0%, 100% {
                transform: translate(-50%, -50%) scale(1);
                opacity: 0.6;
            }
            50% {
                transform: translate(-50%, -50%) scale(1.1);
                opacity: 0.9;
            }
        }

        .mood-hint {
            font-family: 'IBM Plex Mono', monospace;
