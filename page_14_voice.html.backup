        .frame {
            position: absolute;
            top: var(--fluid-space);
            left: var(--fluid-space);
            right: var(--fluid-space);
            bottom: var(--fluid-space);
            border: var(--fluid-border-thin) solid #333;
        }

        .corner-tl {
            position: absolute;
            top: var(--fluid-space);
            left: var(--fluid-space);
            width: var(--fluid-corner); height: var(--fluid-corner);
            border-top: var(--fluid-border) solid #d4b896;
            border-left: var(--fluid-border) solid #d4b896;
        }

        .corner-br {
            position: absolute;
            bottom: var(--fluid-space);
            right: var(--fluid-space);
            width: var(--fluid-corner); height: var(--fluid-corner);
            border-bottom: var(--fluid-border) solid #d4b896;
            border-right: var(--fluid-border) solid #d4b896;
        }

        .header {
            position: relative;
            top: 80px;
            left: 80px;
            z-index: 20;
            margin-bottom: 40px;
        }

        .section-num {
            font-family: 'IBM Plex Mono', monospace;
            font-size: var(--fluid-tiny);
            color: #d4b896;
            letter-spacing: var(--fluid-tracking-sm);
            margin-bottom: 8px;
        }

        h2 {
            font-size: 38px;
            font-weight: 300;
            letter-spacing: var(--fluid-tracking-md);
            text-transform: uppercase;
            line-height: 1.2;
        }

        .subtitle {
            font-size: var(--fluid-body);
            color: #666;
            font-style: italic;
            margin-top: 10px;
            letter-spacing: 1px;
        }

        .main-diagram {
            position: relative;
            top: 200px;
            left: 50%;
            transform: translateX(-50%);
            z-index: 5;
            margin: 0 auto 40px;
        }

        .telegram-flow {
            position: absolute;
            top: 870px;
            left: 50%;
            transform: translateX(-50%);
            text-align: center;
        }

        .flow-title {
            font-family: 'IBM Plex Mono', monospace;
            font-size: var(--fluid-tiny);
            color: #d4b896;
            letter-spacing: var(--fluid-tracking-sm);
            text-transform: uppercase;
            margin-bottom: var(--fluid-space-xs);
        }

        .flow-steps {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: var(--fluid-gap-sm);
        }

        .flow-step {
            padding: 15px 25px;
            background: #0c0c0c;
            border: var(--fluid-border-thin) solid #d4b896;
            font-family: 'IBM Plex Mono', monospace;
            font-size: var(--fluid-eyebrow);
            color: #d4b896;
            letter-spacing: var(--fluid-tracking-sm);
        }

        .flow-arrow {
            font-size: var(--fluid-title-sm);
            color: #555;
        }

        .capabilities {
            position: absolute;
            bottom: 520px;
            left: 80px;
            right: 80px;
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: var(--fluid-gap-sm);
        }

        .capability {
            text-align: center;
            padding: 25px 15px;
            background: #0a0a0a;
            border: var(--fluid-border-thin) solid #222;
        }

        .capability-icon {
            font-family: 'IBM Plex Mono', monospace;
            font-size: var(--fluid-title-md);
            color: #d4b896;
            margin-bottom: 15px;
        }

        .capability-name {
            font-family: 'IBM Plex Mono', monospace;
            font-size: var(--fluid-eyebrow);
            color: #e8e6e3;
            letter-spacing: var(--fluid-tracking-sm);
            text-transform: uppercase;
            margin-bottom: 10px;
        }

        .capability-desc {
            font-size: 13px;
            line-height: 1.6;
            color: #666;
        }

        .tech-stack {
            position: absolute;
            bottom: 380px;
            left: 80px;
            right: 80px;
            display: flex;
            justify-content: center;
            gap: var(--fluid-gap);
            padding: var(--fluid-space-xs) 0;
            border-top: 1px solid #222;
        }

        .tech-item {
            font-family: 'IBM Plex Mono', monospace;
            font-size: 11px;
            color: #555;
            letter-spacing: 1px;
        }

        .tech-item span {
            color: #d4b896;
        }

        .nav-bar {
            position: fixed;
            bottom: 0;
            left: 0;
            right: 0;
            height: 60px;
            background: linear-gradient(to bottom, #0a0a0a, #080808);
            border: var(--fluid-border-thin) solid #2a2a2a;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 4px;
            padding: 0 40px;
        
            z-index: 1000;
        }

        .nav-item {
            flex: 1;
            height: 32px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'IBM Plex Mono', monospace;
            font-size: 10px;
            letter-spacing: 1px;
            text-transform: uppercase;
            color: #555;
            background: #0c0c0c;
            border: var(--fluid-border-thin) solid #222;
            transition: all 0.2s;
            cursor: pointer;
            text-decoration: none;
        }

        .nav-item:hover {
            color: #888;
            border-color: #333;
            background: #111;
        }

        .nav-item.active {
            background: #d4b896;
            color: #080808;
            border-color: #d4b896;
            font-weight: 500;
        }

                /* Mobile Hamburger Menu */
        #menu-toggle {
            display: none;
        }

        .hamburger-btn {
            display: none;
            position: fixed;
            top: 20px;
            right: 20px;
            width: 50px;
            height: 50px;
            background: #d4b896;
            border-radius: 4px;
            cursor: pointer;
            z-index: 1001;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            gap: 6px;
            transition: all 0.3s;
        }

        .hamburger-btn span {
            display: block;
            width: 28px;
            height: 3px;
            background: #080808;
            border-radius: 2px;
            transition: all 0.3s;
        }

        .mobile-menu {
            display: none;
            position: fixed;
            top: 0;
            right: -100%;
            width: 300px;
            height: 100vh;
            background: #080808;
            border-left: var(--fluid-border) solid #d4b896;
            z-index: 1000;
            transition: right 0.3s ease;
            overflow-y: auto;
            padding: 80px 20px 20px;
        }

        .mobile-menu-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: var(--fluid-space-sm);
            padding-bottom: 20px;
            border-bottom: 1px solid #333;
        }

        .mobile-menu-title {
            font-family: 'IBM Plex Mono', monospace;
            font-size: var(--fluid-eyebrow);
            color: #d4b896;
            letter-spacing: var(--fluid-tracking-sm);
            text-transform: uppercase;
        }

        .close-btn {
            position: absolute;
            top: 20px;
            right: 20px;
            width: 40px;
            height: 40px;
            background: transparent;
            border: var(--fluid-border) solid #d4b896;
            border-radius: 4px;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: var(--fluid-title-sm);
            color: #d4b896;
            transition: all 0.2s;
        }

        .close-btn:hover {
            background: #d4b896;
            color: #080808;
        }

        .mobile-nav-item {
            display: block;
            padding: 18px 20px;
            font-family: 'IBM Plex Mono', monospace;
            font-size: var(--fluid-eyebrow);
            letter-spacing: var(--fluid-tracking-sm);
            text-transform: uppercase;
            color: #888;
            background: #0c0c0c;
            border: var(--fluid-border-thin) solid #222;
            border-bottom: none;
            text-decoration: none;
            transition: all 0.2s;
        }

        .mobile-nav-item:last-child {
            border-bottom: 1px solid #222;
        }

        .mobile-nav-item:hover {
            color: #d4b896;
            background: #111;
            border-color: #333;
            padding-left: 30px;
        }

        .mobile-nav-item.active {
            background: #d4b896;
            color: #080808;
            border-color: #d4b896;
            font-weight: 500;
        }

        /* Checkbox hack for menu toggle */
        #menu-toggle:checked ~ .mobile-menu {
            right: 0;
        }

        #menu-toggle:checked ~ .hamburger-btn span:nth-child(1) {
            transform: rotate(45deg) translate(8px, 8px);
        }

        #menu-toggle:checked ~ .hamburger-btn span:nth-child(2) {
            opacity: 0;
        }

        #menu-toggle:checked ~ .hamburger-btn span:nth-child(3) {
            transform: rotate(-45deg) translate(8px, -8px);
        }

        @media (max-width: 768px) {
            .nav-bar {
                display: none;
            }

            .hamburger-btn {
                display: flex;
            }

            .mobile-menu {
                display: block;
