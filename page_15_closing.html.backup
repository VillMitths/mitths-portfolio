                /* Mobile Hamburger Menu */
        #menu-toggle {
            display: none;
        }

        .hamburger-btn {
            display: none;
            position: fixed;
            top: 20px;
            right: 20px;
            width: 50px;
            height: 50px;
            background: #d4b896;
            border-radius: 4px;
            cursor: pointer;
            z-index: 1001;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            gap: 6px;
            transition: all 0.3s;
        }

        .hamburger-btn span {
            display: block;
            width: 28px;
            height: 3px;
            background: #080808;
            border-radius: 2px;
            transition: all 0.3s;
        }

        .mobile-menu {
            display: none;
            position: fixed;
            top: 0;
            right: -100%;
            width: 300px;
            height: 100vh;
            background: #080808;
            border-left: var(--fluid-border) solid #d4b896;
            z-index: 1000;
            transition: right 0.3s ease;
            overflow-y: auto;
            padding: 80px 20px 20px;
        }

        .mobile-menu-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: var(--fluid-space-sm);
            padding-bottom: 20px;
            border-bottom: 1px solid #333;
        }

        .mobile-menu-title {
            font-family: 'IBM Plex Mono', monospace;
            font-size: var(--fluid-eyebrow);
            color: #d4b896;
            letter-spacing: var(--fluid-tracking-sm);
            text-transform: uppercase;
        }

        .close-btn {
            position: absolute;
            top: 20px;
            right: 20px;
            width: 40px;
            height: 40px;
            background: transparent;
            border: var(--fluid-border) solid #d4b896;
            border-radius: 4px;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: var(--fluid-title-sm);
            color: #d4b896;
            transition: all 0.2s;
        }

        .close-btn:hover {
            background: #d4b896;
            color: #080808;
        }

        .mobile-nav-item {
            display: block;
            padding: 18px 20px;
            font-family: 'IBM Plex Mono', monospace;
            font-size: var(--fluid-eyebrow);
            letter-spacing: var(--fluid-tracking-sm);
            text-transform: uppercase;
            color: #888;
            background: #0c0c0c;
            border: var(--fluid-border-thin) solid #222;
            border-bottom: none;
            text-decoration: none;
            transition: all 0.2s;
        }

        .mobile-nav-item:last-child {
            border-bottom: 1px solid #222;
        }

        .mobile-nav-item:hover {
            color: #d4b896;
            background: #111;
            border-color: #333;
            padding-left: 30px;
        }

        .mobile-nav-item.active {
            background: #d4b896;
            color: #080808;
            border-color: #d4b896;
            font-weight: 500;
        }

        /* Checkbox hack for menu toggle */
        #menu-toggle:checked ~ .mobile-menu {
            right: 0;
        }

        #menu-toggle:checked ~ .hamburger-btn span:nth-child(1) {
            transform: rotate(45deg) translate(8px, 8px);
        }

        #menu-toggle:checked ~ .hamburger-btn span:nth-child(2) {
            opacity: 0;
        }

        #menu-toggle:checked ~ .hamburger-btn span:nth-child(3) {
            transform: rotate(-45deg) translate(8px, -8px);
        }

        @media (max-width: 768px) {
            .nav-bar {
                display: none;
            }

            .hamburger-btn {
                display: flex;
            }

            .mobile-menu {
                display: block;
            }

            body {
                width: 100%;
                height: auto;
                min-height: 100vh;
                overflow-x: hidden;
                padding-bottom: 140px;
            }

            .content {
                width: 90%;
                padding: var(--fluid-space-xs) 0;
            }

            .title {
                font-size: var(--fluid-title-lg);
                letter-spacing: 10px;
            }

            .stats {
                flex-wrap: wrap;
                gap: var(--fluid-gap);
            }

            .diagram {
                width: 100%;
                height: auto;
            }

            .footer {
                position: fixed;
                bottom: 70px;
                left: 0;
                right: 0;
                flex-wrap: wrap;
                gap: 10px;
            }
        }
