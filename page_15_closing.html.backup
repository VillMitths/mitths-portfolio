        }

        .nav-item {
            flex: 1;
            height: 32px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'IBM Plex Mono', monospace;
            font-size: 10px;
            letter-spacing: 1px;
            text-transform: uppercase;
            color: #555;
            background: #0c0c0c;
            border: var(--fluid-border-thin) solid #222;
            transition: all 0.2s;
            cursor: pointer;
            text-decoration: none;
