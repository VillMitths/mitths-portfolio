            bottom: 70px;
            left: 0;
            right: 0;
            display: flex;
            justify-content: space-between;
            font-family: 'IBM Plex Mono', monospace;
            font-size: var(--fluid-eyebrow);
            color: #555;
            letter-spacing: var(--fluid-tracking-sm);
            padding: 0 80px;
        
