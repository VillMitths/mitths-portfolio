        }

        .nav-bar {
            position: fixed;
            bottom: 0;
            left: 0;
            right: 0;
            height: 60px;
            background: linear-gradient(to bottom, #0a0a0a, #080808);
            border: var(--fluid-border-thin) solid #2a2a2a;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 4px;
            padding: 0 40px;
        
