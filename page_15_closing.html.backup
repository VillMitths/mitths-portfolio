<style>
        * { margin: 0; padding: 0; box-sizing: border-box; }

        body {
            max-width: 1240px;
            width: 100%;
            min-height: 100vh;
            background: #080808;
            font-family: 'Cormorant Garamond', serif;
            color: #e8e6e3;
            position: relative;
            margin: 0 auto;
            overflow-x: hidden;
            padding-bottom: 240px;
        }

        .frame {
            position: absolute;
            top: var(--fluid-space);
            left: var(--fluid-space);
            right: var(--fluid-space);
            bottom: var(--fluid-space);
            border: var(--fluid-border-thin) solid #333;
        }

        .corner-tl {
            position: absolute;
            top: var(--fluid-space);
            left: var(--fluid-space);
            width: var(--fluid-corner); height: var(--fluid-corner);
            border-top: var(--fluid-border) solid #d4b896;
            border-left: var(--fluid-border) solid #d4b896;
        }

        .corner-br {
            position: absolute;
            bottom: var(--fluid-space);
            right: var(--fluid-space);
            width: var(--fluid-corner); height: var(--fluid-corner);
            border-bottom: var(--fluid-border) solid #d4b896;
            border-right: var(--fluid-border) solid #d4b896;
        }

        .content {
            position: relative;
            top: 120px;
            left: 50%;
            transform: translateX(-50%);
            text-align: center;
            width: 900px;
            margin-bottom: 150px;
            z-index: 10;
            overflow-y: auto;
        }

        .closing-statement {
            font-size: var(--fluid-title-sm);
            font-weight: 300;
            line-height: 1.9;
            color: #888;
            margin-bottom: var(--fluid-space-md);
        }

        .closing-statement em {
            color: #e8e6e3;
            font-style: normal;
        }

        .divider {
            width: 100px;
            height: 1px;
            background: #d4b896;
            margin: 0 auto 50px;
        }

        .stats-summary {
            display: flex;
            justify-content: center;
            gap: 100px;
            margin-bottom: var(--fluid-space-md);
        }

        .stat {
            text-align: center;
        }

        .stat-value {
            font-family: 'IBM Plex Mono', monospace;
            font-size: 42px;
            color: #d4b896;
            font-weight: 300;
        }

        .stat-label {
            font-family: 'IBM Plex Mono', monospace;
            font-size: var(--fluid-tiny);
            color: #555;
            text-transform: uppercase;
            letter-spacing: var(--fluid-tracking-sm);
            margin-top: 8px;
        }

        .tech-competencies {
            margin-top: var(--fluid-space);
            padding: var(--fluid-space-sm);
            background: #0a0a0a;
            border: var(--fluid-border-thin) solid #222;
            text-align: left;
        }

        .tech-label {
            font-family: 'IBM Plex Mono', monospace;
            font-size: var(--fluid-tiny);
            color: #d4b896;
            letter-spacing: var(--fluid-tracking-sm);
            text-transform: uppercase;
            margin-bottom: 15px;
        }

        .tech-list {
            font-family: 'IBM Plex Mono', monospace;
            font-size: 12px;
            color: #666;
            line-height: 2;
        }

        .final-diagram {
            position: relative;
            margin: 60px auto 80px;
            left: 50%;
            transform: translateX(-50%);
            z-index: 5;
        }

        .diagram-label {
            font-family: 'IBM Plex Mono', monospace;
            font-size: var(--fluid-tiny);
            color: #d4b896;
            letter-spacing: var(--fluid-tracking-sm);
            text-transform: uppercase;
            text-align: center;
            margin-bottom: var(--fluid-space-xs);
        }

        .author-section {
            position: relative;
            margin: 60px auto 100px;
            left: 50%;
            transform: translateX(-50%);
            text-align: center;
            z-index: 10;
        }

        .author-name {
